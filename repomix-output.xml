  animation: pulse-glow 5s ease-in-out infinite;
}

@keyframes gradient-shift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.animate-gradient {
  background-size: 200% 200%;
  animation: gradient-shift 6s ease infinite;
}

/* ============================================
   GRAIN TEXTURE (SVG Noise ‚Äî premium)
   ============================================ */

.grain::before {
  content: "";
  position: fixed;
  inset: 0;
  opacity: 0.03;
  pointer-events: none;
  z-index: 9999;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.75' numOctaves='4' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3CfeComponentTransfer%3E%3CfeFuncA type='linear' slope='0.06'/%3E%3C/feComponentTransfer%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
}

/* ============================================
   MAGNETIC BUTTON ‚Äî overshoot easing
   ============================================ */

.btn-magnetic {
  transition: transform 0.4s cubic-bezier(0.3, 0.8, 0.3, 1.1),
    box-shadow 0.4s ease;
}

.btn-magnetic:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 40px -8px var(--color-brand-glow);
}

.btn-magnetic:active {
  transform: translateY(0);
}

/* ============================================
   CARD HOVER ‚Äî glow border + lift
   ============================================ */

.card-hover {
  transition: border-color 0.4s ease, box-shadow 0.5s ease, transform 0.4s cubic-bezier(0.3, 0.8, 0.3, 1.1);
}

.card-hover:hover {
  border-color: rgba(232, 99, 10, 0.35);
  box-shadow: 0 0 0 1px rgba(232, 99, 10, 0.12),
    0 10px 50px -12px rgba(232, 99, 10, 0.2);
  transform: translateY(-3px);
}

/* ============================================
   STACKING CARDS (position: sticky)
   ============================================ */

.stacking-card {
  position: sticky;
  top: 5rem;
}

/* ============================================
   BENTO GRID
   ============================================ */

.bento-grid {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: 1.25rem;
}

@media (max-width: 768px) {
  .bento-grid {
    grid-template-columns: 1fr;
  }
}

/* ============================================
   ORANGE GRADIENT TEXT
   ============================================ */

.text-gradient-brand {
  background: linear-gradient(135deg, #E8630A 0%, #F28C38 50%, #E8630A 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* ============================================
   DIVIDER LINE ‚Äî animated
   ============================================ */

.divider-animated {
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--color-brand), transparent);
  opacity: 0.3;
}

/* ============================================
   STAT NUMBER ‚Äî large display
   ============================================ */

.stat-xxl {
  font-size: clamp(3rem, 2rem + 5vw, 6rem);
  line-height: 1;
  letter-spacing: -0.03em;
  font-weight: 900;
}
